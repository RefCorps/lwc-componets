<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>plRefereeStatus</masterLabel>
    <description>This lwc presentes an edited list of referee status settings.</description>
    <targets>
         <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="currentStatus" type="String" label="Current Status" description="Current status value"  role="inputOnly"/>
            <property name="defaultStatus" type="String" label="Default Status" description="Default Status value"  role="inputOnly"/>
            <property name="selectLabel" type="String" label="Label" description="The label that will appear on the form"  role="inputOnly"/>
            <property name="selectedStatus" type="String" label="Selected Status" description="Selected status value" />
            <property name="errorLabel" type="String" label="ErrorMsg" description="Place messages here" />
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>