<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Designations</masterLabel>
    <description>This lwc displays a Contact&apos;s designations using Apex DesignationController.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="selectLabel" type="String" label="Label" description="The label that will appear on the form" role="inputOnly"/>
            <property name="designeeId" type="String" label="Selected Designee" description="Selected Designee value"/>
            <property name="currentDesignation" type="String" label="Current Designation" description="Current Designation value"/>
            <property name="errorLabel" type="String" label="ErrorMsg" description="Place messages here"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
